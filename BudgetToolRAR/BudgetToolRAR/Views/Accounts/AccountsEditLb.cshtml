@model BudgetToolRAR.Models.Account

<!DOCTYPE html>
<html>
<head>
    <title>Accounts</title>
</head>
<body class="background-dark">
    @*<div class="logo">
        <h3>Budget Tool</h3>
    </div>*@

    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>
    <div class="content container">
        <div class="row">
            <div class="col-md-offset-1 col-md-7">
                <section class="widget">
                    <header>
                        <div class="widget-controls">
                        </div>
                    </header>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-offset-4 col-md-7">
                                    <h3>Account</h3>
                                </div>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label  col-md-4" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control-create" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "control-label  col-md-4" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control-create" } })
                                    @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ReconciledBalance, "Reconciled Balance", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ReconciledBalance, new { htmlAttributes = new { @class = "form-control-create" } })
                                    @Html.ValidationMessageFor(model => model.ReconciledBalance, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-2">
                                    <input type="submit" value="Save" class=" h4 btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
        </div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

</body>
</html>

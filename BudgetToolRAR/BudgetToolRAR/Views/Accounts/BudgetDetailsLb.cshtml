@model IEnumerable<BudgetToolRAR.Models.BudgetItem>

@*@{
        ViewBag.Title = "Log in";
    }*@


<!-- light-blue - v3.1.0 - 2014-12-06 -->

<!DOCTYPE html>
<html>
<head>
    <title>Budget Items</title>
</head>
<body class="background-dark">
    @*<div class="logo">
        <h3>Budget Tool</h3>
    </div>*@

    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>


    <br />
    <div class="content container">
        <div class="row">
            <div class="col-md-1">
                <br />
            </div>

            <div class="col-md-10">
                <a href="@Url.Action("BudgetCreateLb","Accounts")"><span class="name h4 btn btn-primary">Create a Budget Item</span></a>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-1">
                <br />
            </div>
            <div class="col-md-10">
                <section class="widget">
                    <header>

                        <div class="widget-controls">
                            @*<a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                                <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>*@

                        </div>
                    </header>
                    @*<div class="page-tables">*@
                    <!-- Table -->
                    @*<div class="table-responsive">*@

                    <h3 class="text-align-center">Income</h3>

                    @*<table cellpadding="0" cellspacing="0" border="0" id="data-table">*@
                    <div class="mt">
                        <table id="datatable-table" class="table table-striped table-hover datatable-table" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="">Name</th>
                                    <th style="">Category</th>
                                    <th class="right-J" style="">Amount</th>
                                    <th > </th>
                                    <th class="no-sort ">Edit</th>
                                    <th class="no-sort">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* If there are no budget items, will display the heading but will be blank for data, no errors will occur*@

                                @foreach (var item in Model)
                                {
                                    if (item.BudgetType == false)
                                    {      @* Income item = false *@
                                    <tr>
                                        <td width="30%">
                                            @Html.DisplayFor(u => item.Name)
                                        </td>
                                        <td width="30%">
                                            @Html.DisplayFor(u => item.BudgetCategory.Name)
                                        </td>

                                        @* @Html.DisplayFor(u => item.Amount)*@
                                        <td  align="right" width="10%">@String.Format("{0:c}", @item.Amount)</td>
                                        <td width="10%">
                                            &nbsp;
                                        </td>

                                        <td>
                                            @Html.ActionLink(" ", "BudgetEditLb", "Accounts", new { id = item.Id }, new { @class = "btn  white fa fa-edit", @width = "15%" })
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "BudgetDeleteLb", new { id = item.Id }, new { @class = "btn white fa fa-trash", @width = "3%" })
                                        </td>
                                    </tr>
                                    }
                                }
                        </table>
                    </div>
                    <div class="clearfix"></div>
                    @*</div>*@
                    @*</div>*@
                </section>
            </div>
            <div class="col-md-1">
                <br />
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <br />
            </div>
            <div class="col-md-10">
                <section class="widget">
                    <header>

                        <div class="widget-controls">
                            @*<a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                                <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>*@

                        </div>
                    </header>
                    @*<div class="page-tables">*@
                    <!-- Table -->
                    @*<div class="table-responsive">*@
                    <h3 class="text-align-center">Expenses</h3>
                    @*<table cellpadding="0" cellspacing="0" border="0" id="data-table">*@
                    <div class="mt">
                        <table id="datatable-table2" class="table table-striped table-hover datatable-table" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="">Name</th>
                                    <th style="">Category</th>
                                    <th class="right-J" style="">Amount</th>
                                    <th> </th>
                                    <th class="no-sort" style="">Edit</th>
                                    <th class="no-sort">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* If there are no budget items, will display the heading but will be blank for data, no errors will occur*@
                                @foreach (var item in Model)
                                {
                                    if (item.BudgetType == true)
                                    {      @* Expense item = true *@
                                    <tr>
                                        <td width="30%" >
                                            @Html.DisplayFor(u => item.Name)
                                        </td>
                                        <td width="30%">
                                            @Html.DisplayFor(u => item.BudgetCategory.Name)
                                        </td>

                                        @*@Html.DisplayFor(u => item.Amount)*@
                                        <td class="right-J" width="10%">@String.Format("{0:c}", @item.Amount)</td>

                                        <td width="10%">
                                            &nbsp;
                                        </td>

                                        <td>
                                            @Html.ActionLink(" ", "BudgetEditLb", "Accounts", new { id = item.Id }, new { @class = "btn  white fa fa-edit", @width = "3%" })
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "BudgetDeleteLb", new { id = item.Id }, new { @class = "btn white fa fa-trash", @width = "3%" })
                                        </td>
                                    </tr>
                                    }
                                }
                        </table>
                    </div>
                    <div class="clearfix"></div>
                    @*</div>
                        </div>*@
                </section>

            </div>
            <div class="col-md-1">
                <br />
            </div>
        </div>
        </div>
        <div class="row">
            <div class="col-md-12"><br /></div>
        </div>
        <div class="row">
            <div class="col-md-12"><br /></div>
        </div>


        <div class="row">
            <div class="col-md-12"><br /></div>
        </div>

        <!-- page specific scripts -->
</body>

</html>
@* by putting the following in the section scripts, it will be loaded after the render body in the shared layout *@
@* this is necessary for the files to be found *@
@section scripts
{
    <!-- page specific scripts -->
    <!-- page specific libs -->
    <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>

    <script src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/initTables.js"></script>   @* add so that search and paging displays correctly*@

    <!-- page application js -->        @* need this to start datatables to work*@
    <script>
        initDataTables('#datatable-table');                  @* add so that search and paging displays correctly*@
        initDataTables('#datatable-table2');  
    </script>


}
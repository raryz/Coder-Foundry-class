@model IEnumerable<BudgetToolRAR.Models.Transaction>

@*@{
        ViewBag.Title = "Log in";
    }*@


<!-- light-blue - v3.1.0 - 2014-12-06 -->

<!DOCTYPE html>
<html>
<head>
    <title>Transactions</title>
</head>
<body class="background-dark">
    <div class="logo">
        <h3>Budget Tool</h3>
    </div>

    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <br />
        </div>
        <div class="col-md-6">
            @* <br /> *@

            <table cellpadding="0" cellspacing="0" border="0" id="data-table">
                <thead>
                    <tr>
                        <th style="width:100px;">Balance</th>
                        <th style="width:100px;">Reconciled</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width:100px; overflow:hidden;font-size: 14px;"> @ViewBag.prevBalance </td>
                        <td style="width:100px; overflow:hidden;font-size: 14px;"> @ViewBag.prevReconciled</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br /><br /><br />
    <div class="row">
        <div class="col-md-2">
            <br />
        </div>

        <div class="col-md-10">
            <a href="@Url.Action("TransactionCreateLb","Accounts")"><span class="name h4 btn btn-primary">Create a Transaction</span></a>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-1">
            <br />
        </div>
        <div class="col-md-10">
            @*<div class="container">*@
                <section class="widget">
                    <header>

                        <div class="widget-controls">
                            @*<a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                        <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>*@

                        </div>
                    </header>

                    @*<div class="page-tables">*@
                    <!-- Table -->
                    @*<div class="table-responsive">*@
                    <h3>Transactions</h3>
                    @*<table cellpadding="0" cellspacing="0" border="0" id="data-table">*@

                    <div class="mt">
                        <table id="datatable-table" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width:130px;">Date</th>
                                    <th class="hidden-xs" style="width:200px;">Description</th>
                                    <th>Category</th>
                                    <th style="width:100px;">Amount</th>
                                    <th class="hidden-xs" style="width:150px;">Reconciled</th>
                                    <th class="no-sort">Edit</th>
                                    <th class="no-sort">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* If there are no accounts, will display the heading but will be blank for data, no errors will occur*@
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="width:130px;">
                                            @item.Date.ToString("MM/dd/yyyy")
                                            @*@Html.DisplayFor(u => item.Date, "{0:MM/dd/yyyy}")*@
                                        </td>   
                                        <td class="hidden-xs" style="width:200px;">
                                            @Html.DisplayFor(u => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(u => item.BudgetCategory.Name)
                                        </td>
                                        <td style="width:100px;">
                                            @Html.DisplayFor(u => item.Amount)
                                        </td>
                                        <td class="hidden-xs" style="width:150px;">
                                            @Html.DisplayFor(u => item.ReconciledAmount)
                                        </td>

                                        <td>
                                            @Html.ActionLink(" ", "TransactionEditLb", "Accounts", new { id = item.Id }, new { @class = "btn  white fa fa-edit" })
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "TransactionDeleteLb", new { id = item.Id }, new { @class = "btn white fa fa-trash" })
                                        </td>
                                    </tr>
                                }
                        </table>
                    </div>

                    <div class="clearfix"></div>
                    @*</div>*@
                    @*</div>*@
                </section>
            @*</div>*@
        </div>
        <div class="col-md-1">
            <br />
        </div>

    </div>
    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>
    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>


    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>

    <!-- page specific scripts -->

</body>

</html>
@* by putting the following in the section scripts, it will be loaded after the render body in the shared layout *@
@* this is necessary for the files to be found *@
@section scripts
{
    <!-- page specific scripts -->
    <!-- page specific libs -->
    <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>

    <script src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>

    <!-- page application js -->        @* need this to start datatables to work*@
    <script>
        $('#datatable-table').DataTable();
    </script>

}


@model BudgetToolRAR.Models.BudgetCategory


<!DOCTYPE html>
<html>
<head>
    <title>Budget Category</title>
</head>
<body class="background-dark">
    @*<div class="logo">
        <h3>Budget Tool</h3>
    </div>*@
    <div class="row">
        <div class="col-md-12"><br /></div>
    </div>
    <div class="content container">
        <div class="row">
            <div class="col-md-offset-2 col-md-6">
                <section class="widget">
                    <header>
                        <div class="widget-controls">
                        </div>
                    </header>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <div class="row">
                                <div class="col-md-offset-4 col-md-9">
                                    <h3>Create Category</h3>
                                </div>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, "Category Name", htmlAttributes: new { @class = "control-label col-md-offset-0 col-md-3" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control-create" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-10">
                                    <input type="submit" value="Create Category" class="h4 btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

</body>
</html>


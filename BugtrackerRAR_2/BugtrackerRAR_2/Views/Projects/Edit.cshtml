@model BugtrackerRAR_2.Models.Project

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <h2>Edit Projects</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @*<h4>Project</h4>*@
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div class="container">
    <div class="row">

        <div class="col-sm-2">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("IndexBp","Projects")" class="black"> Back to List</a>}
            @if (User.IsInRole("Project Manager"))
            {
                <a href="@Url.Action("IndexBp2", "Projects")" class="black"> Back to List</a>}
            <br />
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("MainAdmin","DashBrd")" class="black"> Back to Dashboard</a>}
            @if (User.IsInRole("Project Manager"))
            {
                <a href="@Url.Action("Main", "Home")" class="black"> Back to Dashboard</a>}
            <div class="col-sm-10">

            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
